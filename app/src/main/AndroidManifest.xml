<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.will.android.pokedexapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".FullscreenActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pokedexChooser"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_pokedex_chooser"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".pokemonDetail"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_pokemon_detail"
            android:theme="@style/FullscreenTheme"></activity>
        <activity
            android:name=".eeveeDetail"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="eeveeDetail"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>