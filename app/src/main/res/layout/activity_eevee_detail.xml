<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.will.android.pokedexapp.pokemonDetail"
    android:orientation="vertical"
    android:weightSum="1"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbars="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E01818"
        android:weightSum="1">

        <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backBtn"
            android:background="#a21111"
            android:layout_weight="0.10"
            android:textColor="#FFFFFF" />

        <TextView
            android:text="Kanto Pokedex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/kantoPokedex"
            android:textSize="20sp"
            android:background="#a21111"
            android:gravity="center_vertical|start"
            android:paddingLeft="10dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/detailbg"
        android:scrollIndicators="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@null">


            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/sa_1"
                android:layout_gravity="center"
                android:id="@+id/pokemon_sprite"
                android:background="#00FFFFFF"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Bulbasaur"
                android:id="@+id/pokemon_name"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:textColor="#000000" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.22"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#80FFFFFF">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.12"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:text="TYPE I"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:id="@+id/pokemonTypeI"
                        android:layout_weight="0.45"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:text="TYPE II"
                        android:layout_width="120dp"
                        android:layout_height="20dp"
                        android:id="@+id/pokemonTypeII"
                        android:layout_weight="0.45"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginTop="5dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="207dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">


                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="6">

                        <TextView
                            android:text="HP"
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:textStyle="normal|bold"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                        <TextView
                            android:text="DEF"
                            android:layout_columnSpan="1"
                            android:layout_width="69dp"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:textStyle="normal|bold"
                            android:textAlignment="center"
                            android:textColor="#000000">
                        </TextView>

                        <TextView
                            android:text="ATK"
                            android:layout_columnSpan="1"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_width="69dp"
                            android:textStyle="normal|bold"
                            android:textAlignment="center"
                            android:textColor="#000000">
                        </TextView>

                        <TextView
                            android:text="250"
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pokemonHP"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:textAlignment="center" />

                        <TextView
                            android:text="100"
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pokemonATK"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:textAlignment="center" />

                        <TextView
                            android:text="100"
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pokemonDEF"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:textAlignment="center" />

                        <TextView
                            android:text="SP. DEF."
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:layout_marginTop="15dp"
                            android:textStyle="normal|bold"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                        <TextView
                            android:text="SPEED"
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:layout_marginTop="15dp"
                            android:textStyle="normal|bold"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                        <TextView
                            android:text="SP. ATK."
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:layout_marginTop="15dp"
                            android:textStyle="normal|bold"
                            android:textAlignment="center"
                            android:textColor="#000000" />

                        <TextView
                            android:text="100"
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pokemonSA"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:textAlignment="center" />

                        <TextView
                            android:text="100"
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pokemonSD"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:textAlignment="center" />

                        <TextView
                            android:text="100"
                            android:layout_width="69dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/pokemonSPD"
                            android:textAlignment="center" />

                    </GridLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#80FFFFFF">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="HEIGHT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_marginRight="30dp" />

                    <TextView
                        android:text="50.2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pokemonHeight"
                        android:textAlignment="center"
                        android:layout_marginRight="30dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="ABILITIES"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="normal|bold"
                        android:textSize="20sp" />

                    <TextView
                        android:text="Overgrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pokemonAbilityI"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pokemonAbilityII"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:text="WEIGHT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="30dp" />

                    <TextView
                        android:text="100.5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pokemonWeight"
                        android:textAlignment="center"
                        android:layout_marginLeft="30dp"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="#80FFFFFF">

                <TextView
                    android:text="Information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textStyle="normal|bold"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/pokemonEntry"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:text="Evolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="normal|bold" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/sa_134"
                            android:id="@+id/imageView5"
                            android:layout_weight="1" />

                        <TextView
                            android:text="Vaporeon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:layout_weight="1"
                            android:textAlignment="center"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/sa_135"
                            android:id="@+id/imageView4"
                            android:layout_weight="1" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/sa_136"
                            android:id="@+id/imageView3"
                            android:layout_weight="1" />

                        <TextView
                            android:text="TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView3"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:textAlignment="center" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
